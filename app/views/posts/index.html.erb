 <% if session[:user_id] %>

  <% @current_user ||= User.find(session[:user_id]) if session[:user_id] %>

   <%= render 'layouts/header' %>
   <div class="content-wrapper">
    <!-- Content Header (Page header) -->


    <!-- Main content -->
    <section class="content">
<div class="row">
  <div class="col-md-12">
      <div class="boxed">
                <!-- Title Bart Start -->

          


<h2>Listado de Posts <a href="/posts/new" style="font-size: 16px;">Cargar Post</a></h2>

    <div class="inner no-radius">


  <table class="table table-striped table-bordered table-hover table-full-width" id="sample_1">
                  <thead>
                    <tr>
                            <th>ID</th>
      
                            <th>Titulo</th>
                            <th>Contenido</th>
                            <th>Empresa</th>
                            <th>Columnista</th>
                            <th>Categoría</th>
                            <th>Subcategoría</th>
                          
                             <th colspan="3"></th>
                    </tr>
                  </thead>
                  <tbody>
  
  <% @posts.each do |post| %>
      <tr>
        <td><%= post.post_id %></td>
        <td><%= post.company_name %></td>
        <td><%= post.company_description %></td>
        <td><%= Company.find(post.company_id).name %></td>
           <td><%= Columnist.find(post.columnist_id).full_name %></td>
        <td><%= Category.find(post.category_id).name %></td>
        <td><%= Subcategory.find(post.subcategory_id).name %></td>

 
        <td><a href="/editpost?post_id=<%= post.post_id %>">Editar</a></td>
        <td><a href="/eliminarpost?post_id=<%= post.post_id %>">Eliminar</a></td>
      </tr>
    <% end %>



                  </tbody>
                </table>



        </div>


      </div>
</div>
</div>





</section>
</div>
<% else %><br><br><br><br>
<div align="center">

<h2>Cerraste tu sesión, vuelve a logearte</h2>
</div>
<br><br><br><br>
<% end %>