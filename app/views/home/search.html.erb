
    <!--Page Title-->
    <section class="page-title">
    	<div class="auto-container">
        	<div class="clearfix">
            	<div class="pull-left">
                	<h2>Todo lo que debe de saber un emprendedor está aquí. Noticias, consejos, tips y mucho más.</h2>
                </div>
                <div class="pull-right">
                	<ul class="page-title-breadcrumb">
                    	<li><a href="/"><span class="fa fa-home"></span>Home</a></li>
                        <li>Publicaciones</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <!--End Page Title-->
    
    <!--Sidebar Page Container-->
    <div class="sidebar-page-container">
    	<div class="auto-container">
        	<div class="row clearfix">
            	
                <div class="row clearfix">
                      <% @posts.reverse.each do |post| %>   
                	<!--News Block One-->
                    <div class="news-block-one col-md-6 col-sm-6 col-xs-12">
                        <div class="inner-box">
                            <div class="image">
                              <a href="/posts/<%= post.id %>" target="_blank"> <img src="<%= post.picture.url %>" alt="" /></a>
                            </div>
                            <div class="lower-box">
                                <h3><a href="/posts/<%= post.id %>" target="_blank"><%= post.company_name %></a></h3>
                                <div class="post-date"><%= post.created_at.strftime("%d/%m/%y") %>, por <%= Columnist.find(post.columnist_id).full_name %></div>
                                <div class="text"><%= post.company_description.truncate_words(20) %></div>
                                <!-- <a href="blog-single.html" class="read-more">Read More <span class="arrow ion-ios-arrow-thin-right"></span></a> -->
                            </div>
                        </div>
                    </div>
                    <!--End News Block-->
               
                    <!--End News Block-->
                         <% end %>
                </div>
                    
             
                
            </div>
            
        </div>
    </div>
    <!--End Sidebar Page Container-->
    

    